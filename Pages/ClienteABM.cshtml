@page "{id?}"
@model ClienteModel

@{
    ViewData["Title"] = Model.EsEdicion ? "Editar Cliente" : "Crear Cliente";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="Cliente.Id" />

    <div class="form-group">
        <label>Empresa</label>
        <input asp-for="Cliente.Empresa" class="form-control" />
    </div>
    <div class="form-group">
        <label>Persona</label>
        <input asp-for="Cliente.Persona" class="form-control" />
    </div>
    <div class="form-group">
        <label>Contacto</label>
        <input asp-for="Cliente.Contacto" class="form-control" />
    </div>
    <div class="form-group">
        <label>Pagina</label>
        <input asp-for="Cliente.Pagina" class="form-control" />
    </div>
    <div class="form-group">
        <label>Direccion</label>
        <input asp-for="Cliente.Direccion" class="form-control" />
    </div>
    <div class="form-group">
        <label>Localidad</label>
        <input asp-for="Cliente.Localidad" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">
        @(Model.EsEdicion ? "Guardar Cambios" : "Crear Cliente")
    </button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
